{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Norvig Checker",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Text Field",
          "name": "textCol"
        },
        {
          "widget-type": "textbox",
          "label": "Suggestion Field",
          "name": "spellCol"
        },
        {
          "widget-type": "textbox",
          "label": "Probability Threshold",
          "name": "threshold",
          "widget-attributes": {
            "default": "0.75"
          }
        }

      ]
    }
  ]
}