{
  "metadata": {"spec-version": "1.5"},

  "display-name": "POS Chunker",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Text Field",
          "name": "textCol"
        },
        {
          "widget-type": "textbox",
          "label": "Chunk Field",
          "name": "chunkCol"
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textarea",
          "label": "Regex Rules",
          "name": "rules",
          "widget-attributes": {
            "rows": "10"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Rule Delimiter",
          "name": "delimiter",
          "widget-attributes": {
            "default": ","
          }
        }
      ]
    }
  ]
}