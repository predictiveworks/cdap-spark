{
"metadata": {"spec-version": "1.5"},

"display-name": "LDA Builder",
 "configuration-groups": [
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Embedding Name",
          "name": "embeddingName"
        },
         {
          "widget-type": "select",
          "label": "Embedding Stage",
          "name": "embeddingStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
       {
          "widget-type": "textbox",
          "label": "Text Field",
          "name": "textCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "dataSplit",
          "widget-attributes": {
            "default": "90:10"
          }
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Topics",
          "name": "k"
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "20"
          }          
        },
        {
          "widget-type": "select",
          "label": "Pooling Strategy",
          "name": "poolingStrategy",
          "widget-attributes": {
            "values": [
              "average",
              "sum"
            ],
            "default": "average"
          }
        }        
      ]
    }
  ]
}