{
  "metadata": {"spec-version": "1.5"},

  "display-name": "NER Builder",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
       ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Token Field",
          "name": "lineCol"
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Embedding Name",
          "name": "embeddingName"
        },
        {
          "widget-type": "select",
          "label": "Embedding Stage",
          "name": "embeddingStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Epochs",
          "name": "minEpochs",
          "widget-attributes": {
            "default": "10"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Epochs",
          "name": "maxEpochs",
          "widget-attributes": {
            "default": "1000"
          }
        }
      ]
    }
  ]
}