{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Word2Vec Builder",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Text Field",
          "name": "textCol"
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "select",
          "label": "Normalization",
          "name": "normalization",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Learning Rate",
          "name": "stepSize",
          "widget-attributes": {
            "default": "0.025"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Vector Size",
          "name": "vectorSize",
          "widget-attributes": {
            "default": "100"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Window Size",
          "name": "windowSize",
          "widget-attributes": {
            "default": "5"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Word Frequency",
          "name": "minCount",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Sentence Length",
          "name": "maxSentenceLength",
          "widget-attributes": {
            "default": "1000"
          }
        }
      ]
    }
  ]
}