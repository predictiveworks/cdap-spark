{
  "metadata": {"spec-version": "1.5"},

  "display-name": "LDA Text Predictor",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "select",
          "label": "Model Variant",
          "name": "modelOption",
          "widget-attributes": {
            "values": [
              "best",
              "latest"
            ],
            "default": "latest"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Embedding Name",
          "name": "embeddingName"
        },
        {
          "widget-type": "select",
          "label": "Embedding Stage",
          "name": "embeddingStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Text Field",
          "name": "textCol"
        },
        {
          "widget-type": "textbox",
          "label": "Topic Field",
          "name": "topicCol"
        },
        {
          "widget-type": "select",
          "label": "Pooling Strategy",
          "name": "poolingStrategy",
          "widget-attributes": {
            "values": [
              "average",
              "sum"
            ],
            "default": "average"
          }
        },
        {
          "widget-type": "select",
          "label": "Topic Strategy",
          "name": "topicStrategy",
          "widget-attributes": {
            "values": [
              "label",
              "vector"
            ],
            "default": "vector"
          }
        }        

      ]
    }
  ]
}