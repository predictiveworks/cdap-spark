{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Word Dependency Builder",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Corpus Field",
          "name": "lineCol"
        },
        {
          "widget-type": "select",
          "label": "Corpus Format",
          "name": "format",
          "widget-attributes": {
            "values": [
              "conll-u",
              "treebank"
            ],
            "default": "conll-u"
          }
        }        
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Iterations",
          "name": "numIter",
          "widget-attributes": {
            "default": "10"
          }
        }
      ]
    }
  ]
}