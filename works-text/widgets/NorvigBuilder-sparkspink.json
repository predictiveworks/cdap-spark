{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Norvig Builder",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Corpus Field",
          "name": "lineCol"
        },
        {
          "widget-type": "textbox",
          "label": "Token Delimiter",
          "name": "valueDelimiter",
          "widget-attributes": {
            "default": "\\S+"
          }
        }
      ]
    }
  ]
}