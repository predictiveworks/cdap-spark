{
  "metadata": {"spec-version": "1.5"},

  "display-name": "NER Tagger",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Embedding Name",
          "name": "embeddingName"
        },
        {
          "widget-type": "select",
          "label": "Embedding Stage",
          "name": "embeddingStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Text Field",
          "name": "textCol"
        },
        {
          "widget-type": "textbox",
          "label": "Token Field",
          "name": "tokenCol"
        },
        {
          "widget-type": "textbox",
          "label": "Entities Field",
          "name": "nerCol"
        },
        {
          "widget-type": "select",
          "label": "Normalization",
          "name": "normalization",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        }
      ]
    }
  ]
}