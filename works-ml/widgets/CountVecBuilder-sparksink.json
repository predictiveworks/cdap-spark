{
  "metadata": {"spec-version": "1.5"},

  "display-name": "CountVec Builder",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
       ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Input Field",
          "name": "inputCol"
        }
      ]
    },

    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Vocabulary Size",
          "name": "vocabSize"
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Document Frequency",
          "name": "minDF",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Term Frequency",
          "name": "minTF",
          "widget-attributes": {
            "default": "1"
          }
        }
      ]
    }
  ]
}