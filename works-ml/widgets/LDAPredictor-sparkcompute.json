{
  "metadata": {"spec-version": "1.5"},

  "display-name": "LDA Predictor",
   "configuration-groups": [
   {
     "label": "Plugin Configuration",
     "properties": [
       {
         "widget-type": "textbox",
         "label": "Reference Name",
         "name": "referenceName"
       }
     ]
   },
   {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "select",
          "label": "Model Variant",
          "name": "modelOption",
          "widget-attributes": {
            "values": [
              "best",
              "latest"
            ],
            "default": "latest"
          }
        }
      ]
     },
     {
       "label": "Data Configuration",
       "properties": [
         {
           "widget-type": "textbox",
           "label": "Features Field",
           "name": "featuresCol"
         },
         {
           "widget-type": "textbox",
           "label": "Prediction Field",
           "name": "predictionCol"
         }
       ]
     }
  ]
}