{
  "metadata": {"spec-version": "1.5"},

  "display-name": "ALS",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "User Field",
          "name": "userCol"
        },
        {
          "widget-type": "textbox",
          "label": "Item Field",
          "name": "itemCol"
        },
        {
          "widget-type": "textbox",
          "label": "Rating Field",
          "name": "ratingCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "dataSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
         {
           "widget-type": "textbox",
           "label": "Factorization Rank",
           "name": "rank",
           "widget-attributes": {
             "default": "10"
           }
         },
         {
          "widget-type": "select",
          "label": "Nonnegative Constraints",
          "name": "nonnegative",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "false"
          }
         },
         {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "10"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Regularization Parameter",
          "name": "regParam",
          "widget-attributes": {
            "default": "0.1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "User Blocks",
          "name": "numUserBlocks",
          "widget-attributes": {
            "default": "10"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Item Blocks",
          "name": "numItemBlocks",
          "widget-attributes": {
            "default": "10"
          }
        },
         {
          "widget-type": "select",
          "label": "Implicit Preference",
          "name": "implicitPrefs",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "false"
          }
         },
        {
          "widget-type": "textbox",
          "label": "Alpha Parameter",
          "name": "alpha",
          "widget-attributes": {
            "default": "1.0"
          }
        }
      ]
    }
  ]
}

