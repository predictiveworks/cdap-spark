{
  "metadata": {"spec-version": "1.5"},

  "display-name": "MLP Classifier",
  "configuration-groups": [
     {
       "label": "Plugin Configuration",
       "properties": [
         {
           "widget-type": "textbox",
           "label": "Reference Name",
           "name": "referenceName"
         }
       ]
     },
     {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Features Field",
          "name": "featuresCol"
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "dataSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "select",
          "label": "Solver Algorithm",
          "name": "solver",
          "widget-attributes": {
            "values": [
              "gd",
              "l-bfgs"
            ],
            "default": "l-bfgs"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Layer Sizes",
          "name": "layers"
        },
        {
          "widget-type": "textbox",
          "label": "Block Size",
          "name": "blockSize",
          "widget-attributes": {
            "default": "128"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "100"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Learning Rate",
          "name": "stepSize",
          "widget-attributes": {
            "default": "0.1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Conversion Tolerance",
          "name": "tol",
          "widget-attributes": {
            "default": "1E-6"
          }
        }
      ]
    }
  ]
}