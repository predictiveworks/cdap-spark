{
  "metadata": {"spec-version": "1.5"},

  "display-name": "TFIDF Builder",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
       ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Input Field",
          "name": "inputCol"
        }
      ]
    },

    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Number of Features",
          "name": "numFeatures"
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Document Frequency",
          "name": "minDocFreq",
          "widget-attributes": {
            "default": "0"
          }
        }
      ]
    }
  ]
}
