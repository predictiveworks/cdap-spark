{
  "metadata": {"spec-version": "1.5"},

  "display-name": "KMeans",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
   {
     "label": "Data Configuration",
     "properties": [
       {
         "widget-type": "textbox",
         "label": "Features Field",
         "name": "featuresCol"
       }
     ]
   },
   {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Clusters",
          "name": "k"
        },

         {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "20"
          }
        },
       {
          "widget-type": "select",
          "label": "Initialization Mode",
          "name": "initMode",
          "widget-attributes": {
            "values": [
              "parallel",
              "random"
            ],
            "default": "parallel"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Initialization Steps",
          "name": "initSteps",
          "widget-attributes": {
            "default": "2"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Convergence Tolerance",
          "name": "tolerance",
          "widget-attributes": {
            "default": "1e-4"
          }
        }
      ]
    }
  ]
}