{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Tokenizer",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Input Field",
          "name": "inputCol"
        },
        {
          "widget-type": "textbox",
          "label": "Output Field",
          "name": "outputCol"
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Regex Pattern",
          "name": "pattern",
          "widget-attributes": {
            "default": "\\s+"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Token Length",
          "name": "minTokenLength",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "select",
          "label": "Gaps",
          "name": "gaps",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        }
      ]
    }
  ]
}