{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Bisecting KMeans",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
     {
       "label": "Plugin Configuration",
       "properties": [
         {
           "widget-type": "textbox",
           "label": "Reference Name",
           "name": "referenceName"
         }
       ]
     },
     {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
     },
     {
       "label": "Data Configuration",
       "properties": [
         {
           "widget-type": "textbox",
           "label": "Features Field",
           "name": "featuresCol"
         }
       ]
     },
     {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Clusters",
          "name": "k"
        },

         {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "20"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Points",
          "name": "minDivisibleClusterSize",
          "widget-attributes": {
            "default": "1.0"
          }
        }
       ]
    }
  ]
}
