{
  "metadata": {"spec-version": "1.5"},

  "display-name": "NB Classifier",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
     {
       "label": "Plugin Configuration",
       "properties": [
         {
           "widget-type": "textbox",
           "label": "Reference Name",
           "name": "referenceName"
         }
       ]
     },
     {
      "label": "Model Configuration",
      "properties": [
       {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Features Field",
          "name": "featuresCol"
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "dataSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "select",
          "label": "Model Type",
          "name": "modelType",
          "widget-attributes": {
            "values": [
              "bernoulli",
              "multinomial"
            ],
            "default": "multinomial"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Smoothing",
          "name": "smoothing",
          "widget-attributes": {
            "default": "1.0"
          }
        }
      ]
    }
  ]
}