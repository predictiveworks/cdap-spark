{
  "metadata": {"spec-version": "1.5"},

  "display-name": "GBT Regressor",
  "configuration-groups": [
     {
       "label": "Plugin Configuration",
       "properties": [
         {
           "widget-type": "textbox",
           "label": "Reference Name",
           "name": "referenceName"
         }
       ]
     },
     {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Features Field",
          "name": "featuresCol"
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "dataSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "select",
          "label": "Loss Type",
          "name": "lossType",
          "widget-attributes": {
            "values": [
              "squared",
              "absolute"
            ],
            "default": "squared"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Information Gain",
          "name": "minInfoGain",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Bins",
          "name": "maxBins",
          "widget-attributes": {
            "default": "32"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Depth",
          "name": "maxDepth",
          "widget-attributes": {
            "default": "5"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "20"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Learning Rate",
          "name": "stepSize",
          "widget-attributes": {
            "default": "0.1"
          }
        }
      ]
    }
  ]
}