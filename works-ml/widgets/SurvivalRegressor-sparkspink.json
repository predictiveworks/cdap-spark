{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Survival Regressor",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Features Field",
          "name": "featuresCol"
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelCol"
        },
        {
          "widget-type": "textbox",
          "label": "Censor Field",
          "name": "censorCol"
        },
        {
          "widget-type": "textbox",
          "label": "Data Split",
          "name": "dataSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Maximum Iterations",
          "name": "maxIter",
          "widget-attributes": {
            "default": "100"
          }
        },
         {
          "widget-type": "textbox",
          "label": "Conversion Tolerance",
          "name": "tol",
          "widget-attributes": {
            "default": "1E-6"
          }
        }
       ]
    }
  ]
}
