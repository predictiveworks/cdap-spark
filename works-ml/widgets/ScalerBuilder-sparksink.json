{
  "metadata": {"spec-version": "1.5"},

  "display-name": "Scaler Builder",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "select",
          "label": "Model Type",
          "name": "modelType",
          "widget-attributes": {
            "values": [
              "maxabs",
              "minmax",
              "standard"
            ],
            "default": "standard"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Input Field",
          "name": "inputCol"
        }
      ]
    },

    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Lower Bound",
          "name": "lowerBound",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Upper Bound",
          "name": "upperBound",
          "widget-attributes": {
            "default": "1.0"
          }
        },
        {
          "widget-type": "select",
          "label": "With Mean",
          "name": "withMean",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "false"
          }
        },
        {
          "widget-type": "select",
          "label": "With Std",
          "name": "withStd",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        }
      ]
    }
  ]
}