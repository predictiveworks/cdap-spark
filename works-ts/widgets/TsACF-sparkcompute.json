{
  "metadata": {"spec-version": "1.5"},

  "display-name": "TS ACF",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Dataset Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Dataset Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "stagging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Time Field",
          "name": "timeCol"
        },
        {
          "widget-type": "textbox",
          "label": "Value Field",
          "name": "valueCol"
        }
      ]
    },
    {
      "label": "Algorithm Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Maximum Lag Order",
          "name": "maxLag",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Discrete Lags",
          "name": "lagValues"
        },
        {
          "widget-type": "textbox",
          "label": "Correlation Threshold",
          "name": "threshold",
          "widget-attributes": {
            "default": "0.95"
          }
        }
      ]      
    }
  ]
}
