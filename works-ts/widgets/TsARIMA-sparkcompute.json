{
  "metadata": {"spec-version": "1.5"},

  "display-name": "TS ARIMA Predictor",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        },
         {
          "widget-type": "select",
          "label": "Model Variant",
          "name": "modelOption",
          "widget-attributes": {
            "values": [
              "best",
              "latest"
            ],
            "default": "latest"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Time Field",
          "name": "timeCol"
        },
        {
          "widget-type": "textbox",
          "label": "Value Field",
          "name": "valueCol"
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Time Steps",
          "name": "steps",
          "widget-attributes": {
            "default": "1"
          }
        }
      ]
    }
  ]
}