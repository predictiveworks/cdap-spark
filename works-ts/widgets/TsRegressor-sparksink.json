{
  "metadata": {"spec-version": "1.5"},

  "display-name": "TS Regressor",
  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Time Field",
          "name": "timeCol"
        },
        {
          "widget-type": "textbox",
          "label": "Value Field",
          "name": "valueCol"
        },
        {
          "widget-type": "textbox",
          "label": "Time Split",
          "name": "timeSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Lag Order",
          "name": "timeLag",
          "widget-attributes": {
            "default": "20"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Minimum Gain",
          "name": "minInfoGain",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Bins",
          "name": "maxBins",
          "widget-attributes": {
            "default": "32"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Depth",
          "name": "maxDepth",
          "widget-attributes": {
            "default": "5"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Number of Trees",
          "name": "numTrees",
          "widget-attributes": {
            "default": "20"
          }
        }
      ]
    }
  ]
}