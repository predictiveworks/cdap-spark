{
"metadata": {"spec-version": "1.5"},

"display-name": "TS Auto ARMA Builder",
 "configuration-groups": [
    {
      "label": "Basic Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "textbox",
          "label": "Time Field",
          "name": "timeCol"
        },
        {
          "widget-type": "textbox",
          "label": "Value Field",
          "name": "valueCol"
        },
        {
          "widget-type": "textbox",
          "label": "Time Split",
          "name": "timeSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Maximum Lag Order",
          "name": "pmax"
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Moving Average Order",
          "name": "qmax"
        },
        {
          "widget-type": "textbox",
          "label": "ElasticNet Mixing",
          "name": "elasticNetParam",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Regularization Parameter",
          "name": "regParam",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "select",
          "label": "Standardization",
          "name": "standardization",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "select",
          "label": "With Intercept",
          "name": "fitIntercept",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "select",
          "label": "Info Criterion",
          "name": "criterion",
          "widget-attributes": {
            "values": [
              "aic",
              "aicc",
              "bic"
            ],
            "default": "aic"
          }
        }
      ]
    }
  ]
}