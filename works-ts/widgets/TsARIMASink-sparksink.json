{
  "metadata": {"spec-version": "1.5"},

  "display-name": "TS ARIMA Builder",

  "icon": {
    "arguments": {
      "data": ""
    },
    "type": "inline"
  },

  "configuration-groups": [
    {
      "label": "Plugin Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Model Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model Name",
          "name": "modelName"
        },
        {
          "widget-type": "select",
          "label": "Model Stage",
          "name": "modelStage",
          "widget-attributes": {
            "values": [
              "experiment",
              "staging",
              "production",
              "archived"
            ],
            "default": "experiment"
          }
        }
      ]
    },
    {
      "label": "Data Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Time Field",
          "name": "timeCol"
        },
        {
          "widget-type": "textbox",
          "label": "Value Field",
          "name": "valueCol"
        },
        {
          "widget-type": "textbox",
          "label": "Time Split",
          "name": "timeSplit",
          "widget-attributes": {
            "default": "70:30"
          }
        }
      ]
    },
    {
      "label": "Parameter Configuration",
      "properties": [
         {
          "widget-type": "textbox",
          "label": "Lag Order",
          "name": "p"
        },
        {
          "widget-type": "textbox",
          "label": "Differencing Degree",
          "name": "d"
        },
        {
          "widget-type": "textbox",
          "label": "Moving Average Order",
          "name": "q"
        },
        {
          "widget-type": "textbox",
          "label": "ElasticNet Mixing",
          "name": "elasticNetParam",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Regularization Parameter",
          "name": "regParam",
          "widget-attributes": {
            "default": "0.0"
          }
        },
        {
          "widget-type": "select",
          "label": "Standardization",
          "name": "standardization",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "select",
          "label": "With Intercept",
          "name": "fitIntercept",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "select",
          "label": "Remove Mean",
          "name": "meanOut",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "false"
          }
        }
      ]
    }
  ]
}